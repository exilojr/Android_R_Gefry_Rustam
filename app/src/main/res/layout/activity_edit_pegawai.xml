<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".EditPegawai">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nip : " />

            <EditText
                android:id="@+id/edtNip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Nip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama : " />

            <EditText
                android:id="@+id/edtNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Nama" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPangkat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Pangkat : " />

            <EditText
                android:id="@+id/edtPangkat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Pangkat" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvJabatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jabatan : " />


            <EditText
                android:id="@+id/edtJabatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Jabatan" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btUpdate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update" />

            <Button
                android:id="@+id/btDelete2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete" />

            <Button
                android:id="@+id/btBackGo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background_normal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tahun : " />

                    <TextView
                        android:id="@+id/tvTahun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Val Tahun" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bulan : " />

                    <TextView
                        android:id="@+id/tvBulan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Val Bulan" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background_normal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jumlah Hari Kerja : " />

                    <TextView
                        android:id="@+id/tvJumlah_Hari_Kerja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Val Jumlah hk" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hadir : " />

                    <TextView
                        android:id="@+id/tvHadir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Val Hadir" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Izin : " />

                    <TextView
                        android:id="@+id/tvIzin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Val Izin" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sakit : " />

                    <TextView
                        android:id="@+id/tvSakit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Val Sakit" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cuti : " />

                    <TextView
                        android:id="@+id/tvCuti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Val Cuti" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanpa Alasan Sah : " />

                    <TextView
                        android:id="@+id/tvTanpa_alasan_sah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Val Cuti" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background_normal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terlambat ( Menit ) : " />

                    <TextView
                        android:id="@+id/tvTerlambat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Val terlambat" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cepat Pulang : " />

                    <TextView
                        android:id="@+id/tvCepat_pulang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Val Hadir" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lembur Kerja Harian : " />

                    <TextView
                        android:id="@+id/tvLKH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Val LKH" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background_normal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UWHS : " />

                    <TextView
                        android:id="@+id/tvUWHS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Val UWHS" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upacara : " />

                    <TextView
                        android:id="@+id/tvUpacara"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Val Hadir" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wirid : " />

                    <TextView
                        android:id="@+id/tvWirid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Val Izin" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apel : " />

                    <TextView
                        android:id="@+id/tvApel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Val Sakit" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Senam : " />

                    <TextView
                        android:id="@+id/tvSenam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Val Cuti" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background_normal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Orientasi Pelayanan (1-100) : " />

                    <TextView
                        android:id="@+id/tvOrientasi_pelayanan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Val OP" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Integritas (1-100) : " />

                    <TextView
                        android:id="@+id/tvIntegritas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Val Hadir" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sasaran Kerja Pegawai (1-100) : " />

                    <TextView
                        android:id="@+id/tvSKP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Val SKP" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kerja Sama (1-100): " />

                    <TextView
                        android:id="@+id/tvKerja_sama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Val KS" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kepemimpinan (1-100) : " />

                    <TextView
                        android:id="@+id/tvKepemimpinan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Val Cuti" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SOP (1-100) : " />

                    <TextView
                        android:id="@+id/tvSOP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Val SOP" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>