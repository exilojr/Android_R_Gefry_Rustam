<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_insert"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".InsertPegawai">

    <TextView
        android:id="@+id/tvNip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nip : "
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtNip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edtNama"
        android:layout_alignBaseline="@+id/tvNip"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginBottom="-3dp"
        android:layout_toEndOf="@+id/tvNip"
        android:layout_toRightOf="@+id/tvNip"
        android:hint="Nip" />

    <TextView
        android:id="@+id/tvNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNip"
        android:layout_alignStart="@+id/tvNip"
        android:layout_marginTop="19dp"
        android:text="Nama : "
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvNama"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_toEndOf="@+id/tvNama"
        android:layout_toRightOf="@+id/tvNama"
        android:hint="Nama" />

    <TextView
        android:id="@+id/tvPangkat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNama"
        android:layout_alignStart="@+id/tvNip"
        android:layout_marginTop="16dp"
        android:text="Pangkat : "
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignTop="@+id/tvPangkat"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="148dp" />


    <TextView
        android:id="@+id/tvJabatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPangkat"
        android:layout_alignStart="@+id/tvNip"
        android:layout_marginStart="1dp"
        android:layout_marginTop="20dp"
        android:text="Jabatan : "
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtJabatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvJabatan"
        android:layout_marginLeft="27dp"
        android:layout_toRightOf="@+id/tvJabatan"
        android:hint="Jabatan" />


    <LinearLayout
        android:id="@+id/Linearlayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvJabatan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btInserting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert" />

        <Button
            android:id="@+id/btBackGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back" />
    </LinearLayout>



</RelativeLayout>